@if (Questions != null)
{
    CurrentQuestion = Questions.Find(x => x.Number == CurrentNumber);
    
    @if (CurrentQuestion != null && !Finished)
    {
        <QuestionComponent Question=@CurrentQuestion IsAnswerCorrectChanged=IsAnswerCorrect IsNextClickedChanged=IsNextClicked TotalQuestions=Questions.Count/>
    }
    
    @if (Finished)
    {
        <div class="mb-4 text-center">
            <h1 class="fs-1">
                Score <span class="oi oi-badge fs-2"></span>
                <br>
                <span class="badge bg-warning text-dark mt-3 animate__animated animate__jackInTheBox" style="font-size:5rem">
                    @Score / @Questions.Count()
                </span>
            </h1>
        </div>
    }
}